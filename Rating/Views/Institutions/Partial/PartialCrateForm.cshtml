@model Rating.Models.Institution

<div class="form-group row">
    <label asp-for="Name"  class="col-sm-3 col-form-label register-label">Название заведения:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <input class="form-control" id="Name" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
</div>
<div class="form-group row">
    
    <label asp-for="Description" class="col-sm-3 col-form-label register-label">Описания:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <textarea style="min-height: 200px!important;" class="form-control" asp-for="Description"> </textarea>
        <span asp-validation-for="Description"></span>
    </div>
</div>


<div class="form-group row">
    <label asp-for="File" class="col-sm-3 col-form-label register-label">Главная фотография:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <div class="input-group">
            <input style="border: 0" class="form-control" type="file" asp-for="File">
        </div>
        <span asp-validation-for="File"></span>
    </div>
</div>