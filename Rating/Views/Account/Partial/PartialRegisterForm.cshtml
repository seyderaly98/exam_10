@model Rating.ViewModels.Register

<div class="form-group row">
    <label asp-for="Email"  class="col-sm-3 col-form-label register-label">E-mail:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <input class="form-control" id="Email" asp-for="Email">
        <span asp-validation-for="Email"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Name"  class="col-sm-3 col-form-label register-label">Имя:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <input class="form-control" id="Name" asp-for="Name">
        <span asp-validation-for="Email"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Password" class="col-sm-3 col-form-label register-label">Пароль:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <div class="input-group">
                    <input class="form-control" id="inputPassword" asp-for="Password">
                    <div class="input-group-append ">
                        <span class="input-group-text input-group-text-register">
                            <a href="#" class="password-control password-control-register"></a>
                        </span>
                    </div>
                </div>
        <span asp-validation-for="Password"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label register-label">Подтвердите пароль:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <div class="input-group">
            <input class="form-control" id="inputPassword2" asp-for="ConfirmPassword">
            <div class="input-group-append">
                <span class="input-group-text input-group-text-register">
                    <a href="#" class="password-control password-control-register "></a>
                </span>
            </div>
        </div>
        <span asp-validation-for="ConfirmPassword"></span>
        <span style="color: silver;display: block;">
            Пароль должен содержать не менее 8 символов.
        </span>
    </div>
</div>